{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "es2015",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "amd",
        "moduleResolution": "node",
        "outFile": "./dist/bundle.js",
        "rootDir": "./src",
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "types": []
    },
    "include": [
        "./src/*/**/*.ts",
    ]
}